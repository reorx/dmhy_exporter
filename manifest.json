{
  "name": "DMHY Exporter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Export magnets on DMHY",
  "homepage_url": "https://github.com",
  "permissions": [
    "storage",
    "notifications",
    "*://share.dmhy.org/*",
    "*://*/jsonrpc/*"
  ],
  "web_accessible_resources": [
    "main.js",
    "clipboard.min.js"
  ],
  "background": {
    "persistent": false,
    "scripts": ["aria2.js", "options.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://share.dmhy.org/*"
      ],
      "css": ["style.css"],
      "js": ["options.js", "content_script.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
